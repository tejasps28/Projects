<launch>
  <!--- Run AMCL -->
  <include file="$(find amr_localization)/launch/amr_localization.launch" />
  <param name="/use_sim_time" value="true"/>

 <!-- open rviz with configuration -->
  <arg default="$(find amr_navigation)/rviz/move_base.rviz" name="rvizconfig"/>
  <node args="-d $(arg rvizconfig)" name="rviz" pkg="rviz" required="true" type="rviz"/>

  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find amr_navigation)/config/move_base_params1.yaml" command="load" />
    <rosparam file="$(find amr_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find amr_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find amr_navigation)/config/local_costmap_params.yaml" command="load" />
    <!-- <param name="local_costmap/width" value="10.0"/>
    <param name="local_costmap/height" value="10.0"/> -->
    <rosparam file="$(find amr_navigation)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find amr_navigation)/config/trajectory_local_planner.yaml" command="load" />
    <!-- <rosparam file="$(find amr_navigation)/config/navfn_global_planner_params.yaml" command="load" /> -->
    <!-- <rosparam file="$(find amr_navigation)/config/teb_local_planner_params.yaml" command="load" /> -->

    <!-- <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />  base_local_planner/TrajectoryPlannerROS  dwa_local_planner/DWAPlannerROS -->
    <!-- <param name="controller_frequency" value="5.0" />
    <param name="controller_patience" value="15.0" /> -->
  </node>

</launch>
